<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="350dp"
    android:layout_height="500dp"
    android:layout_gravity="center"
    android:background="#5E30AF"
    android:orientation="vertical">

    <TextView
        android:id="@+id/txt_close_2"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/cross"
        android:gravity="center"
        android:padding="5dp"
        android:text="X"
        android:textColor="@color/white"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/storyPopUpImg"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="@drawable/rounded_image_darkgray" />

        <TextView
            android:id="@+id/storyPopUpName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:padding="5dp"
            android:text="Arnab Biswas"
            android:textColor="@color/white"
            android:textSize="22sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/storyPopUpComp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:padding="2dp"
            android:text="Microsoft"
            android:textColor="@color/white" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp">

        <TextView
            android:id="@+id/storyPopUpPack"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:paddingStart="4dp"
            android:paddingEnd="4dp"
            android:layout_weight="1"
            android:singleLine="true"
            android:ellipsize="marquee"
            android:background="#0C0C0C"
            android:gravity="center"
            android:text="Package: 12 LPA"
            android:textColor="@color/white"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/storyPopUpYear"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:paddingStart="4dp"
            android:paddingEnd="4dp"
            android:layout_weight="1"
            android:singleLine="true"
            android:ellipsize="marquee"
            android:background="#0A0A0B"
            android:gravity="center"
            android:text="Year: 2017"
            android:textColor="@color/white"
            android:textSize="12sp" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="20dp">

            <TextView
                android:id="@+id/storyPopUpDesc"
                android:layout_width="300dp"
                android:layout_height="match_parent"
                android:text="AKjshdakd KJHKJsdhaksjdh adasjdhdakjshdaksjdhkasjhdkajshdkajshdkjashdkjahsdkjhaskdjhaskdjhas
                k/n/nn//n/n\n\n\n\n\n\n\n\n\n\n\nscscdas\n\n\n\n\adfasdn\n\n\asdasdasdn\n\n\n\n\n\ajshdkajshdkaj"
                android:textColor="@color/white" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>