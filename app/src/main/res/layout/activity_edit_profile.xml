<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.andro300dpid.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="30dp"
    android:background="@color/colorPrimaryDark"
    tools:context=".EditProfile">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="Edit Profile"
        android:textSize="40dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/nameEditText"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="50dp"
        android:backgroundTint="@color/white"
        android:hint="Name"
        android:padding="20dp"
        android:textColor="@color/white"
        android:textColorHint="@color/white" />

    <EditText
        android:id="@+id/passEditText"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="40dp"
        android:backgroundTint="@color/white"
        android:hint="Password"
        android:inputType="textPassword"
        android:padding="20dp"
        android:textColor="@color/white"
        android:textColorHint="@color/white" />

    <EditText
        android:id="@+id/cnfPassEditText"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="40dp"
        android:backgroundTint="@color/white"
        android:hint="Confirm Password"
        android:inputType="textPassword"
        android:padding="20dp"
        android:textColor="@color/white"
        android:textColorHint="@color/white" />
    <HorizontalScrollView
        android:layout_marginTop="40dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/imgEditLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/boy1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#232F34"
                android:clickable="true"
                app:srcCompat="@drawable/boy" />

            <ImageView
                android:id="@+id/girl1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#232F34"
                android:clickable="true"
                app:srcCompat="@drawable/girl1" />

            <ImageView
                android:id="@+id/boy2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#232F34"
                android:clickable="true"
                app:srcCompat="@drawable/boyspecs" />

            <ImageView
                android:id="@+id/girl2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#232F34
"
                android:clickable="true"
                app:srcCompat="@drawable/girl2" />

            <ImageView
                android:id="@+id/boy3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#232F34"
                android:clickable="true"
                app:srcCompat="@drawable/man" />

            <ImageView
                android:id="@+id/girl3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#232F34"
                android:clickable="true"
                app:srcCompat="@drawable/girl" />

            <ImageView
                android:id="@+id/boy4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#232F34"
                android:clickable="true"
                app:srcCompat="@drawable/boynormal" />

            <ImageView
                android:id="@+id/girl4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#232F34"
                android:clickable="true"
                app:srcCompat="@drawable/girl3" />
        </LinearLayout>
    </HorizontalScrollView>

    <Button
        android:id="@+id/editSubmit"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="45dp"
        android:layout_gravity="center"
        android:text="Submit"
        android:textColor="@color/white"
        android:background="@drawable/submit_button_round"/>

</LinearLayout>