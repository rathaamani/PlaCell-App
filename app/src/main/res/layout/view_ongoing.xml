<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="40dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

   <LinearLayout
       android:layout_marginBottom="20dp"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="horizontal">

       <RelativeLayout
           android:layout_width="0dp"
           android:layout_weight="1"
           android:layout_height="match_parent">
           <ImageView
               android:layout_centerHorizontal="true"
               android:layout_centerVertical="true"
               android:id="@+id/detailOngoingImg"
               android:src="@drawable/ic_launcher_background"
               android:background="@drawable/rounded_image_white"
               android:layout_width="50dp"
               android:layout_height="50dp" />
       </RelativeLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="4"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/detailOngoingCompName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Company's Name: Zoho"
                android:textSize="22dp"
                android:textColor="@android:color/primary_text_light_nodisable"
                android:paddingLeft="17dp"

                android:paddingBottom="3dp" />
            <TextView
                android:id="@+id/detailOngoingCgpa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Package: N/A"
                android:textSize="17dp"
                android:paddingLeft="17dp"
                android:paddingBottom="3dp"
                android:layout_gravity="center"
                />
        </LinearLayout>
   </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/detailOngoingDesc"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:text="what the company" />

    </LinearLayout>
</LinearLayout>